<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgsmall"
    tools:context="ben_and_asaf_ttp.thetownproject.MainActivity">

    <ImageView
        android:id="@+id/login_phone_icon"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/login"
        android:layout_marginBottom="2dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColorHint="@android:color/white"
        android:id="@+id/login_txtUser"
        android:hint="@string/login_txtUser"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="15sp"
        android:id="@+id/login_editUser"
        android:layout_gravity="right"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_txtPass"
        android:hint="@string/login_txtPass"
        android:gravity="center"
        android:textSize="20sp"
        android:textColorHint="@android:color/white"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:id="@+id/login_editPass"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/login_checkboxRemember"
            android:id="@+id/login_checkboxRemember"
            android:checked="false"
            android:textColorHint="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:background="@drawable/round_button"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:color="@android:color/white"
            android:hint="@string/login_btnLogin2"
            android:textColorHint="@android:color/white"
            android:id="@+id/login_btnSignIn"
            android:layout_marginBottom="5dp" />

    </LinearLayout>

</LinearLayout>
