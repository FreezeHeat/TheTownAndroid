<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp" android:background="@android:color/black"
    android:paddingLeft="5dp" android:paddingRight="5dp"
    android:weightSum="1">

    <TextView
        android:layout_weight="0.4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Player's Nickname"
        android:id="@+id/playerCard_txt_playerUsername"
        android:background="@drawable/menu"
        android:textColor="@android:color/white"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:layout_weight="0.4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Player's Status"
        android:id="@+id/playerCard_txt_playerStatus"
        android:textColor="@android:color/white"
        android:gravity="center_vertical|center_horizontal"/>

    <Button
        android:layout_weight="0.2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/playerCard_btn_action"
        android:text="Player's action"
        android:background="@drawable/border_rectangle_inverted"
        android:textColor="@android:color/white"
        android:layout_margin="2dp"/>
</LinearLayout>