<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/myBackgroundSmall"
    android:weightSum="100">

    <EditText
        android:hint="Username"
        android:textColorHint="@android:color/holo_red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:id="@+id/register_editUser"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"/>

    <EditText
        android:hint="Password"
        android:textColorHint="@android:color/holo_red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:id="@+id/register_editPass"
        android:gravity="center"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"/>

    <EditText
        android:hint="Re-Type Password"
        android:textColorHint="@android:color/holo_red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:id="@+id/register_editRePass"
        android:gravity="center"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:background="@drawable/round_button"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:hint="@string/register_btnConfirm"
            android:textColorHint="@android:color/white"
            android:id="@+id/register_btnConfirm"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:background="@drawable/round_button"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:hint="@string/register_btnClear"
            android:textColorHint="@android:color/white"
            android:id="@+id/register_btnClear" />

    </LinearLayout>

</LinearLayout>