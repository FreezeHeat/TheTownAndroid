<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgsmall"
    android:weightSum="100"
    tools:context="ben_and_asaf_ttp.thetownproject.MainActivity">

    <ImageView
        android:id="@+id/login_phone_icon"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/login"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_weight="10"
        android:textColorHint="#FFC10101"
        android:id="@+id/login_txtUser"
        android:hint="@string/login_txtUser"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="10sp"
        android:layout_weight="10"
        android:id="@+id/login_editUser"
        android:layout_gravity="right"
        android:gravity="center"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_txtPass"
        android:hint="@string/login_txtPass"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="10"
        android:textColorHint="#FFC10101"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="10sp"
        android:layout_weight="10"
        android:inputType="textPassword"
        android:id="@+id/login_editPass"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/login_checkboxRemember"
        android:textSize="10sp"
        android:id="@+id/login_checkboxRemember"
        android:checked="false"
        android:textColorHint="#FFFFFF"
        android:layout_gravity="center"
        android:layout_weight="10"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="90">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_small"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:hint="@string/login_btnForgot"
            android:textColorHint="@android:color/white"
            android:id="@+id/login_btnForgot"
            android:layout_marginRight="3dp"
            android:layout_weight="30" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_small"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:color="@android:color/white"
            android:hint="@string/login_btnLogin2"
            android:textColorHint="@android:color/white"
            android:id="@+id/login_btnSignIn"
            android:layout_marginRight="3dp"
            android:layout_weight="30"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_small"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:hint="@string/login_btnOptions"
            android:textColorHint="@android:color/white"
            android:id="@+id/login_btnOptions"
            android:layout_weight="30"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:touchscreenBlocksFocus="true"
        android:gravity="center_vertical|center_horizontal">

        <ImageButton
                android:scaleType="fitXY"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/login_imgbtnInfo"
                android:src="@drawable/info"
                android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
