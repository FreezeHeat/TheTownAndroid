<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    style="@style/myBackgroundSmall"
    android:weightSum="1"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEmail1"
            android:hint="@string/pref_switch1"
            android:textSize="25dp"
            android:textColorHint="#FFC10101"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/pref_switch2"
            android:textColorHint="@android:color/white"
            android:background="@drawable/round_button_small"
            android:id="@+id/pref_switch1"
            android:layout_marginLeft="30dp" />

    </LinearLayout>

</LinearLayout>